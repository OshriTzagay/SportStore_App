<div title="titleDiv">
    <h1 class="Title"><span>A</span>ccessories</h1>

</div>
    <div class="bg-div">
        <img class="the-bg" src="https://mongooseagency.com/files/3415/9620/1413/Return_of_Sports.jpg" />

    </div>
@{
    <div class="cardsContainer">

        @foreach (var equip in Model)
        {

            <div class="EquipCards">
                <img class="EquipImgs" src="@equip.Pic" />
                <h2>@equip.Company</h2>
                <h3>@equip.ProductName</h3>
                <h2>@equip.WhatSport</h2>
                <p>Price:@equip.Price</p>

            </div>
        }
    </div>

}
