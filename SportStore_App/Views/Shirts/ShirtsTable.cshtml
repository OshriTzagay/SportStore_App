<link rel="stylesheet" href="~/Content/ShirtsCSS.css" />
<div class="shirtsBtns">

    <button class="theBtns" onclick="location.href='@Url.Action("AllShirts", "Shirts")'">Sport Shirts</button>
    <button class="theBtns" onclick="location.href='@Url.Action("ShirtsTable", "Shirts")'">Shirts Table</button>
    <button class="theBtns" onclick="location.href='@Url.Action("OnlyLongShirts", "Shirts")'">Long Shirts&Tops</button>
    <button class="theBtns" onclick="location.href='@Url.Action("OnlyDrifit", "Shirts")'">Dri-fit Shirts</button>
    <button class="theBtns" onclick="location.href='@Url.Action("PriceSortedShirts", "Shirts")'">Low to High Prices</button>

</div>


<div title="titleDiv">
    <h1 class="Title"><span>T</span>able</h1>
</div>


<div class="shirtsTable">
    <br /><br />
    <table>
        <tr>
            <th>Id</th>
            <th>ClothType</th>
            <th>Brand</th>
            <th>Gender</th>
            <th>isShort</th>
            <th>isDrifit</th>
            <th>Pic</th>
            <th>Price</th>



        </tr>
        @foreach (var shirt in Model)
        {

            <tr>
                <td>@shirt.Id</td>
                <td>@shirt.ClothType</td>
                <td>@shirt.Brand</td>
                <td>@shirt.Gender</td>
                <td>@shirt.isShort</td>
                <td>@shirt.isDrifit</td>
                <td><img src="@shirt.Pic" /></td>
                <td>@shirt.Price</td>


            </tr>
        }

    </table>

</div>
}
