    <img class="slidePic" src="https://static.nike.com/a/images/t_PDP_864_v1/f_auto,b_rgb:f5f5f5,q_80/63a25297-d1ae-4fdd-ba88-0592a2b3f6bd/fc-barcelona-strike-dri-fit-knit-football-tracksuit-QqDjrZ.png" alt="Slide 9" />

    <img class="slidePic" src="https://static.nike.com/a/images/t_PDP_864_v1/f_auto,b_rgb:f5f5f5,q_80/d6b64029-b53a-4e71-b66b-c08afda37048/fc-barcelona-strike-dri-fit-knit-football-tracksuit-QqDjrZ.png" alt="Slide 6" />

</article>
@{
    <div class="cardsContainer">

        @foreach (var pants in Model)
        {

            <div class="PantsCards">
                <img class="PantsImgs" src="@pants.Pic" />
                <h1 id="clothTypeTitle">@pants.ClothType</h1>
                <h4 id="brandTitle">@pants.Brand</h4>
                <p>Price: @pants.Price</p>
            </div>
        }
    </div>

}

